    script(type='text/javascript').
        $('.jarallax').jarallax({
            speed: 0.5,
            imgWidth: 1366,
            imgHeight: 768
        })
        $('#nav').affix({
          offset: {
            top: $('#mainpage').height()-$('#nav').height()
          }
        })